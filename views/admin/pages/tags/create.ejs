<form action="/admin/tags/create" method="POST">
    <div class="mb-3">
        <label class="form-label">Tên</label>
        <input type="text" name="name" class="form-control" id="tagName" placeholder="Nhập tên tag">
    </div>

    <div class="mb-3">
        <label class="form-label">Slug</label>
        <input type="text" name="slug" class="form-control" placeholder="Tự tạo nếu không nhập">
    </div>

    <div class="mb-3">
        <label class="form-label">Màu nền</label>
        <input type="color" name="color[bg]" class="form-control form-control-color" id="bgColor" value="#ffffff">
    </div>

    <div class="mb-3">
        <label class="form-label">Màu chữ</label>
        <input type="color" name="color[text]" class="form-control form-control-color" id="textColor" value="#000000">
    </div>

    <div class="mb-3">
        <label class="form-label">Preview</label><br>
        <span id="tagPreview" class="badge px-3 py-2">
            Tag preview
        </span>
    </div>

    <button type="submit" class="btn btn-primary mt-5">
        Thêm mới
    </button>
</form>

<script src="/admin/js/tag.js"></script>